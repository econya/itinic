!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Itinic - IT in Intentional Communities
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      %nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand(href="/about") itinic
          #navbar.navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li{class: ('active' if in_controller? 'communities')}
                %a(href="#{communities_path}") Communities
            %ul.nav.navbar-nav
              %li{class: ('active' if in_controller? 'technologies')}
                %a(href="#{technologies_path}") Technologies
            %ul.nav.navbar-nav
              %li{class: ('active' if in_controller? 'pages')}
                %a(href="#{about_path}") About
      = render 'layouts/flashs'
      .row
        .col-md-12
          .well
            = yield
